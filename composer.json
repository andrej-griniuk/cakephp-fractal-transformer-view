{
    "name": "czepter/cakephp-fractal-transformer-view",
    "description": "CakePHP view builder utilizing Fractal library for entities transformation",
    "type": "cakephp-plugin",
    "keywords": [
        "cakephp",
        "api",
        "json",
        "rest",
        "fractal"
    ],
    "homepage": "http://github.com/czepter/cakephp-fractal-transformer-view",
    "license": "MIT",
    "authors": [
        {
            "name": "Andrej Griniuk",
            "email": "andrej.griniuk@gmail.com"
        },
        {
            "name": "Christian Zepter",
            "email": "dev@czepter.de"
        }
    ],
    "require": {
        "php": ">=7.2",
        "cakephp/cakephp": "^4.2",
        "league/fractal": "^0.20.1"
    },
    "require-dev": {
        "cakephp/migrations": "^3.5",
        "phpunit/phpunit": "^9.5"
    },
    "autoload": {
        "psr-4": {
            "FractalTransformerView\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "FractalTransformerView\\Test\\": "tests",
            "Cake\\Test\\": "./vendor/cakephp/cakephp/tests"
        }
    }
}
